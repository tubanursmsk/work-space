@page
@model MVC.Pages.Account.RegisterModel
@{
    ViewData["PageTitle"] = "Register";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <h2>User Register</h2>
        @if (ModelState.IsValid == false)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateEntry modelState in ModelState.Values)
                    {
                        @foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <input name="UserRegisterDto.FirstName"  value="@Model.UserRegisterDto.FirstName" class="form-control" placeholder="FirstName" />
            </div>
            <div class="mb-3">
                <input name="UserRegisterDto.LastName"  value="@Model.UserRegisterDto.LastName" class="form-control" placeholder="LastName" />
            </div>
            <div class="mb-3">
                <input name="UserRegisterDto.Email"  value="@Model.UserRegisterDto.Email" class="form-control" placeholder="Email" />
            </div>
            <div class="mb-3">
                <input name="UserRegisterDto.Password" type="password" value="@Model.UserRegisterDto.Password" class="form-control" placeholder="Password" />
            </div>
            <button class="btn btn-success">Register</button>
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>
